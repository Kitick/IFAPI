{
    "name": "ifcopilot",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "bin": "index.js",
    "scripts": {
        "prebuildAll": "tsc",
        "buildAll": "terser index.js -o index.js -c -m",
        "postbuildAll": "npm run build",

        "prebuild": "tsc -p source",
        "build": "terser public/index.js -o public/index.js -c -m",
        "postbuild": "node .",

        "compile": "pkg .",
        "postcompile": "executables\\ifcopilot-win.exe"
    },
    "pkg": {
        "targets": [
            "node16-win-x64",
            "node16-linux-x64"
        ],
        "assets": "public/*",
        "outputPath": "executables"
    },
    "author": "Kevin Munson",
    "license": "ISC",
    "dependencies": {
        "express": "^4.18.2",
        "net": "^1.0.2",
        "socket.io": "^4.7.2"
    }
}